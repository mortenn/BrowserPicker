<UserControl
    x:Class="BrowserPicker.View.Configuration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:browserPicker="clr-namespace:BrowserPicker;assembly=BrowserPicker.Common"
    xmlns:converter="clr-namespace:BrowserPicker.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:BrowserPicker.Resources"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:view="clr-namespace:BrowserPicker.View"
    xmlns:viewModel="clr-namespace:BrowserPicker.ViewModel"
    Width="600"
    Height="400"
    d:DataContext="{d:DesignInstance viewModel:ConfigurationViewModel,
                                     d:IsDesignTimeCreatable=True}"
    Background="#333"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:IconFileToImageConverter x:Key="IconConverter" />

            <ObjectDataProvider
                x:Key="MatchTypes"
                MethodName="GetValues"
                ObjectType="{x:Type system:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="browserPicker:MatchType" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <DataTemplate x:Key="BrowserIcon" DataType="{x:Type viewModel:BrowserViewModel}">
                <Image
                    Margin="0,0,0,0"
                    d:DataContext="{DynamicResource DefaultIcon}"
                    DataContext="{Binding Model.IconPath, Converter={StaticResource IconConverter}}">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="{Binding}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                    <Setter Property="Source" Value="{DynamicResource DefaultIcon}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </DataTemplate>

            <DataTemplate x:Key="BrowserIconAndName" DataType="viewModel:BrowserViewModel">
                <StackPanel Orientation="Horizontal">
                    <ContentPresenter VerticalAlignment="Center" ContentTemplate="{StaticResource BrowserIcon}" />
                    <TextBlock
                        Padding="5,0,0,0"
                        VerticalAlignment="Center"
                        Text="{Binding Model.Name}" />
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TabControl
            VerticalAlignment="Stretch"
            Background="#77000000"
            BorderBrush="#77FFFFFF">
            <TabControl.Style>
                <Style TargetType="TabControl">
                    <Setter Property="SelectedIndex" Value="1" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Welcome}" Value="True">
                            <Setter Property="SelectedIndex" Value="0" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Style>

            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border
                                    Name="Border"
                                    Margin="2,0"
                                    Background="#22000000"
                                    BorderBrush="#77FFFFFF"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="10,10,0,0"
                                    TextBlock.FontSize="12"
                                    TextBlock.Foreground="White">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Margin="10,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header"
                                        RecognizesAccessKey="True" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter TargetName="Border" Property="Background" Value="#22FFFFFF" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="FontWeight" Value="Bold" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="{x:Static properties:i18n.TopNameWelcome}">
                <!--<TabItem.Style>-->
                <!--<Style BasedOn="{StaticResource {x:Type TabItem}}" TargetType="TabItem">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Welcome}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>-->
                <TextBlock
                    Width="548"
                    Height="304"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Light"
                    Foreground="White"
                    TextWrapping="Wrap">
                    <Run Text="{x:Static properties:i18n.NameWelcomeText1}" /><LineBreak /><LineBreak />
                    <Run Text="{x:Static properties:i18n.NameWelcomeText2}" /><LineBreak />
                    <Run Text="{x:Static properties:i18n.NameWelcomeText3}" /><LineBreak /><LineBreak />
                    <Run Text="{x:Static properties:i18n.NameWelcomeText4}" /><LineBreak />
                    <Run Text="{x:Static properties:i18n.NameWelcomeText5}" /><LineBreak />
                    <Run Text="{x:Static properties:i18n.NameWelcomeText6}" /><LineBreak />
                    <Hyperlink
                        Foreground="LightBlue"
                        MouseEnter="OnMouseEnter"
                        MouseLeave="OnMouseLeave"
                        NavigateUri="{Binding Source={x:Static properties:i18n.NameWelcomeText7}}"
                        RequestNavigate="Hyperlink_RequestNavigate"
                        TextDecorations="None">
                        <Run Text="{x:Static properties:i18n.NameWelcomeText7}" />
                    </Hyperlink><LineBreak /><LineBreak />
                    <Run Text="{x:Static properties:i18n.NameWelcomeText8}" /><LineBreak />
                    <Hyperlink
                        Foreground="LightBlue"
                        MouseEnter="OnMouseEnter"
                        MouseLeave="OnMouseLeave"
                        NavigateUri="{Binding Source={x:Static properties:i18n.NameWelcomeText9}}"
                        RequestNavigate="Hyperlink_RequestNavigate"
                        TextDecorations="None">
                        <Run Text="{x:Static properties:i18n.NameWelcomeText9}" />
                    </Hyperlink><LineBreak /><LineBreak />
                    <!--<Run FontSize="8" Text="&quot;" /><Run FontSize="8" Text="{x:Static properties:i18n.NameWelcomeText10}" /><Run FontSize="8" Text="&quot;" />-->
                </TextBlock>
            </TabItem>

            <TabItem Header="{x:Static properties:i18n.TopNameBrowsers}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ParentViewModel.Choices}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel CanVerticallyScroll="True" Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="viewModel:BrowserViewModel">
                                    <Grid>
                                        <Grid.Style>
                                            <Style>
                                                <Setter Property="UIElement.Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Model.Removed}" Value="True">
                                                        <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter
                                            Width="40"
                                            Height="40"
                                            Margin="20,0,0,0"
                                            Content="{Binding}"
                                            ContentTemplate="{StaticResource BrowserIcon}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="10"
                                            FontSize="18"
                                            Foreground="White"
                                            Text="{Binding Model.Name}" />
                                        <Grid Grid.Column="2" VerticalAlignment="Center">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsManuallyOrdered}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock FontSize="10"><Hyperlink Command="{Binding MoveUp}" TextDecorations="None">ðŸ”¼</Hyperlink></TextBlock>
                                            <TextBlock Grid.Row="1" FontSize="10"><Hyperlink Command="{Binding MoveDown}" TextDecorations="None">ðŸ”½</Hyperlink></TextBlock>
                                        </Grid>
                                        <TextBlock
                                            Grid.Column="3"
                                            Margin="10"
                                            FontSize="16">
                                            <Hyperlink Command="{Binding Disable}">
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style>
                                                            <Setter Property="TextBlock.Foreground" Value="Green" />
                                                            <Setter Property="TextBlock.Text" Value="{x:Static properties:i18n.NameBrowsersBtnEnabled}" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Model.Disabled}" Value="True">
                                                                    <Setter Property="TextBlock.Foreground" Value="OrangeRed" />
                                                                    <Setter Property="TextBlock.Text" Value="{x:Static properties:i18n.NameBrowsersBtnDisabled}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Hyperlink>
                                        </TextBlock>
                                        <TextBlock
                                            Grid.Column="4"
                                            Margin="10"
                                            FontSize="16">
                                            <Hyperlink Command="{Binding Edit}">
                                                <TextBlock
                                                    Foreground="CadetBlue"
                                                    Text="{x:Static properties:i18n.NameBrowsersBtnEdit}"
                                                    ToolTip="{x:Static properties:i18n.NameBrowsersBtnEditTip}" />
                                            </Hyperlink>
                                        </TextBlock>
                                        <TextBlock
                                            Grid.Column="5"
                                            Margin="10"
                                            FontSize="16">
                                            <Hyperlink Command="{Binding Remove}">
                                                <TextBlock
                                                    Foreground="Red"
                                                    Text="{x:Static properties:i18n.NameBrowsersBtnRemove}"
                                                    ToolTip="{x:Static properties:i18n.NameBrowsersBtnRemoveTip}" />
                                            </Hyperlink>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <StackPanel
                        Grid.Row="1"
                        Margin="4"
                        Orientation="Horizontal">
                        <TextBlock>
                            <Hyperlink Command="{Binding AddBrowser}" Foreground="White">
                                <TextBlock Text="{x:Static properties:i18n.NameBrowsersBtnAddBrowser}" />
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock Margin="10,0,0,0">
                            <Hyperlink Command="{Binding RefreshBrowsers}" Foreground="White">
                                <TextBlock Text="{x:Static properties:i18n.NameBrowsersBtnRefreshBrowserList}" />
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="{x:Static properties:i18n.TopNameSetting}">
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type CheckBox}">
                            <Setter Property="Margin" Value="5,0,0,5" />
                        </Style>
                    </StackPanel.Resources>

                    <CheckBox
                        Content="{x:Static properties:i18n.NameSettingBoxTransparency}"
                        Foreground="White"
                        IsChecked="{Binding Settings.DisableTransparency}" />

                    <CheckBox
                        Content="{x:Static properties:i18n.NameSettingBoxAlwaysShow}"
                        Foreground="White"
                        IsChecked="{Binding Settings.AlwaysPrompt}" />

                    <StackPanel Orientation="Horizontal">
                        <CheckBox
                            Content="{x:Static properties:i18n.NameSettingBoxDefaultMatching}"
                            Foreground="White"
                            IsChecked="{Binding Settings.UseFallbackDefault}" />
                        <ComboBox
                            Height="22"
                            Margin="5,-4,0,0"
                            IsSynchronizedWithCurrentItem="False"
                            ItemTemplate="{StaticResource BrowserIconAndName}"
                            ItemsSource="{Binding ParentViewModel.Choices}"
                            SelectedValue="{Binding Settings.DefaultBrowser}"
                            SelectedValuePath="Model.Name" />
                    </StackPanel>

                    <CheckBox
                        Content="{x:Static properties:i18n.NameSettingBoxNoDefaultMatching}"
                        Foreground="White"
                        IsChecked="{Binding Settings.AlwaysAskWithoutDefault}" />

                    <CheckBox
                        Checked="CheckBox_Checked"
                        Content="{x:Static properties:i18n.NameSettingBoxDefaultsNotRunning}"
                        Foreground="White"
                        IsChecked="{Binding Settings.AlwaysUseDefaults}" />

                    <RadioButton
                        Margin="6,2"
                        Content="{x:Static properties:i18n.NameSettingBtnSortManually}"
                        Foreground="White"
                        GroupName="OrderBy"
                        IsChecked="{Binding Settings.UseManualOrdering}" />
                    <RadioButton
                        Margin="6,2"
                        Content="{x:Static properties:i18n.NameSettingBtnSortUsage}"
                        Foreground="White"
                        GroupName="OrderBy"
                        IsChecked="{Binding Settings.UseAutomaticOrdering}" />
                    <RadioButton
                        Margin="6,2,4,6"
                        Content="{x:Static properties:i18n.NameSettingBtnSortAlphabetically}"
                        Foreground="White"
                        GroupName="OrderBy"
                        IsChecked="{Binding Settings.UseAlphabeticalOrdering}" />

                    <CheckBox
                        Content="{x:Static properties:i18n.NameSettingBoxDisallowNetworkActivity}"
                        Foreground="White"
                        IsChecked="{Binding Settings.DisableNetworkAccess}"
                        ToolTip="Disabled url resolution feature" />

                    <StackPanel Margin="25,0,0,0">
                        <StackPanel.Style>
                            <Style>
                                <Setter Property="Control.IsEnabled" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Settings.DisableNetworkAccess}" Value="True">
                                        <Setter Property="Control.IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="White" Text="{x:Static properties:i18n.NameSettingTextBoxUrlResolutionTimeout}" />
                            <TextBox Text="{Binding Settings.UrlLookupTimeoutMilliseconds, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </StackPanel>
                    <Button
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="5"
                        Padding="5"
                        HorizontalAlignment="Left"
                        Click="OpenDefaultAppsSettings_Click"
                        Content="{x:Static properties:i18n.NameSettingBtnDefaultBrowser}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="10,0,0,0"
                        Padding="5"
                        HorizontalAlignment="Left"
                        Click="RegisterOpenWith_Click"
                        Content="{x:Static properties:i18n.NameSettingBtnRegAddOpen}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="4"
                        Margin="10,0,0,0"
                        Padding="5"
                        HorizontalAlignment="Left"
                        Click="UnregisterOpenWith_Click"
                        Content="{x:Static properties:i18n.NameSettingBtnRegRemoveOpen}" />
                </StackPanel>
            </TabItem>

            <TabItem Header="{x:Static properties:i18n.TopNameDefaultsMatch}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="5"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameDefaultsMatchTextSetDefaultBrowser}" />
                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"
                        BorderBrush="{x:Null}"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeColumns="False"
                        ItemsSource="{Binding Defaults}"
                        RowHeight="32">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="{x:Static properties:i18n.NameDefaultsMatchHeaderMatch}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="browserPicker:DefaultSetting">
                                        <ComboBox
                                            VerticalContentAlignment="Center"
                                            IsSynchronizedWithCurrentItem="False"
                                            ItemsSource="{Binding Source={StaticResource MatchTypes}}"
                                            SelectedValue="{Binding Type}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Pattern}"
                                Header="{x:Static properties:i18n.NameDefaultsMatchHeaderPattern}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="5,0" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn
                                Width="55"
                                Header="{x:Static properties:i18n.NameDefaultsMatchHeaderBrowser}"
                                SortMemberPath="Model.Name">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="browserPicker:DefaultSetting">
                                        <ComboBox
                                            VerticalContentAlignment="Center"
                                            IsSynchronizedWithCurrentItem="False"
                                            ItemTemplate="{StaticResource BrowserIcon}"
                                            ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=DataContext.ParentViewModel.Choices}"
                                            SelectedValue="{Binding Browser}"
                                            SelectedValuePath="Model.Name" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="browserPicker:DefaultSetting">
                                        <Button Command="{Binding Remove}" Content="X" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{Binding Source={StaticResource MatchTypes}}" SelectedItem="{Binding NewDefaultMatchType}" />
                        <TextBox Grid.Column="1" Text="{Binding NewDefaultPattern}" />
                        <ComboBox
                            Grid.Column="2"
                            Height="22"
                            IsSynchronizedWithCurrentItem="False"
                            ItemTemplate="{StaticResource BrowserIcon}"
                            ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=view:Configuration}, Path=DataContext.ParentViewModel.Choices}"
                            SelectedValue="{Binding NewDefaultBrowser}"
                            SelectedValuePath="Model.Name" />
                        <Button
                            Grid.Column="3"
                            Padding="5,0"
                            Command="{Binding AddDefault}"
                            Content="{x:Static properties:i18n.BtnAdd}" />
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="{x:Static properties:i18n.TopNameTestDefaults}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Foreground="White" Text="{x:Static properties:i18n.NameTestDefaultsTextUri}" />

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Text="{Binding TestDefaultsURL, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameTestDefaultsTextDefaultMatched}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Foreground="LightGreen"
                        Text="{Binding TestDefaultsResult}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameTestDefaultsTextActualChoice}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Foreground="LightGreen"
                        Text="{Binding TestActualResult}" />
                </Grid>
            </TabItem>

            <TabItem Header="{x:Static properties:i18n.TopNameBackup}">
                <Grid Margin="10" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Margin="5"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameBackupText}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        Padding="5"
                        Command="{Binding Backup}"
                        Content="{x:Static properties:i18n.NameBackupBtnExport}" />
                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        Padding="5"
                        Command="{Binding Restore}"
                        Content="{x:Static properties:i18n.NameBackupBtnImport}" />
                    <ScrollViewer
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        VerticalScrollBarVisibility="Auto">
                        <TextBlock
                            Foreground="White"
                            Text="{Binding Settings.BackupLog}"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="{x:Static properties:i18n.TopNameUrlShorteners}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.ColumnSpan="2"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameUrlShortenersTextTitle}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameUrlShortenersHeaderDefault}" />
                    <ListBox
                        Grid.Row="2"
                        Grid.Column="0"
                        ItemsSource="{Binding DefaultUrlShorteners}"
                        SelectionMode="Single" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameUrlShortenersTextDefault}"
                        ToolTip="{x:Static properties:i18n.NameUrlShortenersTextTipDefault}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Foreground="White"
                        Text="{x:Static properties:i18n.NameUrlShortenersHeaderAdditional}" />
                    <ListBox
                        x:Name="UrlShorteners"
                        Grid.Row="2"
                        Grid.Column="1"
                        ItemsSource="{Binding AdditionalUrlShorteners}"
                        SelectionMode="Single" />

                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="NewShortener" Text="{Binding NewUrlShortener}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="10,0"
                            Command="{Binding AddShortener}"
                            CommandParameter="{Binding Text, ElementName=NewShortener}"
                            Content="{x:Static properties:i18n.BtnAdd}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="2"
                            Padding="10,0"
                            Command="{Binding RemoveShortener}"
                            CommandParameter="{Binding SelectedItem, ElementName=UrlShorteners}"
                            Content="{x:Static properties:i18n.BtnRemove}" />
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">

            <TextBlock Padding="4">
                <TextBlock.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ParentViewModel.Url.TargetURL}" Value="{x:Null}">
                                <Setter Property="UIElement.Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <Hyperlink Command="{Binding ParentViewModel.Configure}" Foreground="White">
                    <TextBlock Text="{x:Static properties:i18n.TopNameDone}" />
                </Hyperlink>
            </TextBlock>

            <TextBlock Padding="4">
                <TextBlock.Style>
                    <Style>
                        <Setter Property="UIElement.Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ParentViewModel.Url.TargetURL}" Value="{x:Null}">
                                <Setter Property="UIElement.Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                <Hyperlink Command="{Binding ParentViewModel.Exit}" Foreground="White">
                    <TextBlock Text="{x:Static properties:i18n.TopNameExit}" />
                </Hyperlink>
            </TextBlock>

        </StackPanel>

    </Grid>
</UserControl>
